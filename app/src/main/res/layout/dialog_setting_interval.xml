<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/weather_dialog_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_title_padding"
        android:text="@string/update_interval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/weather_setting_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/divider_marginTop"
        android:background="@color/setting_divider_background"
        app:layout_constraintTop_toBottomOf="@id/weather_dialog_setting_title" />

    <ListView
        android:id="@+id/weather_dialog_setting_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_list_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_setting_divider" />


</android.support.constraint.ConstraintLayout>
