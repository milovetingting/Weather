<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/weather_daily_item_width"
    android:layout_height="@dimen/weather_daily_item_height"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/weather_item_tv_hourly_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/weather_item_iv_hourly_icon"
        android:layout_width="@dimen/weather_daily_size"
        android:layout_height="@dimen/weather_daily_size" />

    <TextView
        android:id="@+id/weather_item_tv_hourly_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

</LinearLayout>
